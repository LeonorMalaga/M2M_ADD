<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">
           <!-- tools:context=".cover"-->


    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gateway Group Id:"
            android:id="@+id/gatewayGroupId_textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Other"
            android:id="@+id/gatewayGroupSelect_button"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:id="@+id/gatewayGroupId_editText"
            android:text="SMARTPHONES" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gateway Id:"
            android:id="@+id/gatewayId_textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Other"
            android:id="@+id/gatewaySelect_button"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:id="@+id/gatewayId_editText"
            android:text="MotorolaE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Id:"
            android:id="@+id/sensorId_textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Other"
            android:id="@+id/sensorSelect_button"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/sensorId_editText"
            android:text="IbeaconDetect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resource Id:"
            android:id="@+id/resourceId_textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/resourceSearch_button"
            android:layout_gravity="right"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/resourceId_editText"
            android:text="AB26C134D12345" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resource Specification(Optional):"
            android:id="@+id/resourceSpecification_textView" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/resourceSpecification_editText"
            android:text="The ResourceId is the iBeacon Adress. We store the current RSSI (a short number) in the paiload" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="save storage structure "
            android:id="@+id/SaveStorageStructure_button"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Data Validation:"
            android:id="@+id/respuestaValidacion_textView"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>